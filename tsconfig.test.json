{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "./",
    "outDir": "./dist-test",
    "baseUrl": "./",
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["./src/*"],
      "@src/*": ["./src/*"],
      "@tests/*": ["./tests/*"],
      "@types/*": ["./src/types/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist", "dist-test"],
  "vitest": {
    "resolve": {
      "extensions": [".ts", ".js"]
    }
  }
}
