# Server Configuration
PORT=3000
HOST=0.0.0.0

# File Upload Limits
MAX_FILE_SIZE=52428800

# Encryption (must match PPTist frontend)
CRYPTO_KEY=pptist

# Rate Limiting
RATE_LIMIT_MAX=10
RATE_LIMIT_WINDOW=60000

# Logging
LOG_LEVEL=info

# Output Format (both, json, pptist)
# Default: pptist (backward compatible)
DEFAULT_OUTPUT_FORMAT=pptist
