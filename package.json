{
  "name": "pptist-backend",
  "version": "1.0.0",
  "description": "PPTX to PPTist format conversion backend service",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "pptx",
    "pptist",
    "conversion",
    "powerpoint"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@fastify/multipart": "^9.4.0",
    "@fastify/rate-limit": "^10.3.0",
    "crypto-js": "^4.2.0",
    "fast-xml-parser": "^5.3.6",
    "fastify": "^5.7.4",
    "jszip": "^3.10.1",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "tinycolor2": "^1.6.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^25.3.0",
    "@types/tinycolor2": "^1.4.6",
    "@types/uuid": "^10.0.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  }
}
