{
  "name": "pptx-conversion-service",
  "version": "1.0.0",
  "description": "PPTX to JSON conversion service with async task queue",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "vitest",
    "test:fixed": "vitest --config vitest.config.fixed.ts",
    "test:docker": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "test:unit": "vitest run tests/unit",
    "test:models": "vitest run tests/unit/models",
    "test:utils": "vitest run tests/unit/utils",
    "test:queue": "vitest run tests/unit/services/queue",
    "test:converters": "vitest run tests/unit/services/conversion/converters",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest --coverage",
    "test:script": "node scripts/run-tests.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "benchmark": "node scripts/benchmark.js",
    "benchmark:quick": "node scripts/benchmark.js --iterations 5",
    "benchmark:full": "node scripts/benchmark.js --iterations 50 --warmup",
    "benchmark:concurrent": "node scripts/benchmark.js --concurrency 5 --iterations 20",
    "benchmark:compare": "node scripts/compare-benchmarks.js"
  },
  "keywords": [
    "pptx",
    "json",
    "conversion",
    "pptist",
    "presentation"
  ],
  "author": "PPTist Backend Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/multipart": "^9.4.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.5",
    "@opentelemetry/api": "^1.9.0",
    "config": "^3.3.12",
    "fast-xml-parser": "^4.3.6",
    "fastify": "^5.0.0",
    "fastify-plugin": "5.1.0",
    "fastq": "^1.15.0",
    "fflate": "^0.8.2",
    "js-yaml": "^4.1.0",
    "pino": "^8.21.0",
    "prom-client": "^15.1.3",
    "rotating-file-stream": "^3.2.7",
    "uuid": "^10.0.0",
    "yauzl": "^3.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/config": "^3.3.5",
    "@types/node": "^22.0.0",
    "@types/pino-pretty": "^4.7.5",
    "@types/uuid": "^10.0.0",
    "@types/yauzl": "^2.10.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.3.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.18"
  }
}
